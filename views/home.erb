background: -webkit-linear-gradient(top, rgba(188,192,194,1) 0%, rgba(213,215,217,1) 7%, rgba(213,215,217,1) 54%, rgba(178,182,183,1) 100%);
background: -o-linear-gradient(top, rgba(188,192,194,1) 0%, rgba(213,215,217,1) 7%, rgba(213,215,217,1) 54%, rgba(178,182,183,1) 100%);
background: -ms-linear-gradient(top, rgba(188,192,194,1) 0%, rgba(213,215,217,1) 7%, rgba(213,215,217,1) 54%, rgba(178,182,183,1) 100%);
