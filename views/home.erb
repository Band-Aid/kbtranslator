.main{
  width:350px;
  margin:50px auto;
}

input[type="text"]{
  font-family:helvetica_neue, sans-serif;
  color:#607078;
  font-size:13px;
  width:260px;
  padding-left:15px;
  height:30px;
  line-height:35px;
  border-radius: 15px 0 0 15px;
  -moz-border-radius: 15px 0 0 15px;
  -webkit-border-radius: 15px 0 0 15px;
  border:1px solid #808384;
  border-right:1px solid #dce5e8;
  background: rgba(245,245,245,1);
background: -moz-linear-gradient(top, rgba(245,245,245,1) 0%, rgba(248,248,248,1) 3%, rgba(255,255,255,1) 9%, rgba(255,255,255,1) 48%, rgba(255,255,255,1) 90%, rgba(245,245,245,1) 100%);
background: -webkit-gradient(left top, left bottom, color-stop(0%, rgba(245,245,245,1)), color-stop(3%, rgba(248,248,248,1)), color-stop(9%, rgba(255,255,255,1)), color-stop(48%, rgba(255,255,255,1)), color-stop(90%, rgba(255,255,255,1)), color-stop(100%, rgba(245,245,245,1)));
background: -webkit-linear-gradient(top, rgba(245,245,245,1) 0%, rgba(248,248,248,1) 3%, rgba(255,255,255,1) 9%, rgba(255,255,255,1) 48%, rgba(255,255,255,1) 90%, rgba(245,245,245,1) 100%);
background: -o-linear-gradient(top, rgba(245,245,245,1) 0%, rgba(248,248,248,1) 3%, rgba(255,255,255,1) 9%, rgba(255,255,255,1) 48%, rgba(255,255,255,1) 90%, rgba(245,245,245,1) 100%);
background: -ms-linear-gradient(top, rgba(245,245,245,1) 0%, rgba(248,248,248,1) 3%, rgba(255,255,255,1) 9%, rgba(255,255,255,1) 48%, rgba(255,255,255,1) 90%, rgba(245,245,245,1) 100%);
background: linear-gradient(to bottom, rgba(245,245,245,1) 0%, rgba(248,248,248,1) 3%, rgba(255,255,255,1) 9%, rgba(255,255,255,1) 48%, rgba(255,255,255,1) 90%, rgba(245,245,245,1) 100%);
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f5f5f5', endColorstr='#f5f5f5', GradientType=0 );
  display:block;
  float:left;
}

input[type="submit"]{
  background:#ecf2f5;
  border:1px solid #808384;
  border-left:none;
  height:34px;
  width:30px;
  margin-right:47px;
  display:block;
  float:right;
  border-radius: 0 15px 15px 0;
  -moz-border-radius: 0 15px 15px 0;
  -webkit-border-radius: 0 15px 15px 0;
  background-image:url(http://josh-ruther4d.com/wp-content/uploads/2013/05/icon.png);
  background-repeat:no-repeat;
  background-position:center;
}

.suggest{
  display:none;
  float:left;
  clear:both;
  margin-top:20px;
  color:#ffffff;
  width:300px;
  height:70px;
  padding:5px;
  border:1px solid #19272e;
  background: rgba(86,97,102,1);
background: -moz-linear-gradient(top, rgba(86,97,102,1) 0%, rgba(86,97,102,1) 2%, rgba(86,97,102,1) 19%, rgba(44,54,59,1) 100%);
background: -webkit-gradient(left top, left bottom, color-stop(0%, rgba(86,97,102,1)), color-stop(2%, rgba(86,97,102,1)), color-stop(19%, rgba(86,97,102,1)), color-stop(100%, rgba(44,54,59,1)));
background: -webkit-linear-gradient(top, rgba(86,97,102,1) 0%, rgba(86,97,102,1) 2%, rgba(86,97,102,1) 19%, rgba(44,54,59,1) 100%);
background: -o-linear-gradient(top, rgba(86,97,102,1) 0%, rgba(86,97,102,1) 2%, rgba(86,97,102,1) 19%, rgba(44,54,59,1) 100%);
background: -ms-linear-gradient(top, rgba(86,97,102,1) 0%, rgba(86,97,102,1) 2%, rgba(86,97,102,1) 19%, rgba(44,54,59,1) 100%);
background: linear-gradient(to bottom, rgba(86,97,102,1) 0%, rgba(86,97,102,1) 2%, rgba(86,97,102,1) 19%, rgba(44,54,59,1) 100%);
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#566166', endColorstr='#2c363b', GradientType=0 );
  border-radius: 4px 4px 4px 4px;
  -moz-border-radius: 4px 4px 4px 4px;
  -webkit-border-radius: 4px 4px 4px 4px;
}

input:focus + div{
  display:block;
}

.active{
  position:relative;
}

.active:before{
  content:" ";
  width: 0; 
	height: 0; 
	border-left: 12px solid transparent;
	border-right: 12px solid transparent;
	border-bottom: 12px solid #58646a;
  position:absolute;
  bottom:35px;
}

.active{
  width:290px;
  height:30px;
  line-height:35px;
  padding-left:10px;
  display:block;
  float:left;
background: rgba(67,161,195,1);
background: -moz-linear-gradient(top, rgba(67,161,195,1) 0%, rgba(26,115,159,1) 100%);
background: -webkit-gradient(left top, left bottom, color-stop(0%, rgba(67,161,195,1)), color-stop(100%, rgba(26,115,159,1)));
background: -webkit-linear-gradient(top, rgba(67,161,195,1) 0%, rgba(26,115,159,1) 100%);
background: -o-linear-gradient(top, rgba(67,161,195,1) 0%, rgba(26,115,159,1) 100%);
background: -ms-linear-gradient(top, rgba(67,161,195,1) 0%, rgba(26,115,159,1) 100%);
background: linear-gradient(to bottom, rgba(67,161,195,1) 0%, rgba(26,115,159,1) 100%);
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#43a1c3', endColorstr='#1a739f', GradientType=0 );
    border-radius: 4px 4px 4px 4px;
  -moz-border-radius: 4px 4px 4px 4px;
  -webkit-border-radius: 2px 2px 2px 2px;
  border-top:1px solid #83c9de;
  border-left:1px solid #58aecb;
  border-bottom:1px solid #21719c;
  text-shadow:1px 1px #1d7096;
}

.suggest div:nth-of-type(2){
  width:290px;
  height:30px;
  line-height:35px;
  padding-left:10px;
  display:block;
  float:left;
  margin-top:5px;
}

input:focus {
  outline:none;
  border:1px solid #45a2c4;
  -webkit-box-shadow: 0px 0px 28px rgba(69, 162, 196, 0.2);
  -moz-box-shadow:    0px 0px 28px rgba(69, 162, 196, 0.2);
  box-shadow:         0px 0px 28px rgba(69, 162, 196, 0.2);
}

input[type="submit"]:hover{
  -webkit-filter: brightness(105%);
}

input[type="submit"]:active{
  -webkit-filter: brightness(90%);
}
</style>
</head>

